{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["plugin:vue/essential", "eslint:recommended"],
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "globals": {
        "Babel": true,
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "linebreak-style": [0, "windows"],
		"quotes": ["error", "single"],
		"semi": 0,
        "no-unused-vars": 1,
        // "no-unused-components": 1,
        "no-mixed-spaces-and-tabs": 0,
        "vue/no-parsing-error": 0,
		"no-else-return": 2,
		"no-eval": 1,
		"indent": 0,
		"use-isnan": 2,
		"valid-typeof": 2,
		"no-control-regex": 0,
		"no-prototype-builtins": 0,
		"no-useless-escape" : 0,
		"camelcase": 0,
        "no-tabs": "off",
        "no-underscore-dangle":0,
        "no-alert":"error",
        "no-param-reassign": 0,
        "no-restricted-syntax": 0,
        "guard-for-in": 0,
        "consistent-return":0,
        "prefer-rest-params":0,
        "no-return-await":0,
        "no-use-before-define": 0,
        "no-trailing-spaces": 0,
        "lines-between-class-members":0,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
    },
	"settings": {
		"import/ignore": [
            "node_modules",
		]
	}
}
